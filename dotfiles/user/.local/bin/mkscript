#!/bin/sh

if [ "$#" ]; then
    if [ "$1" = "bash" ]; then
        printf "#!/usr/bin/env bash\n\n# Bash Strict Mode\nset -o errexit # add '|| true' for commands that you allow to fail\nset -o nounset\nset -o pipefail\nIFS=$'\\\n\\\t'" > "$2"
    elif [ "$1" = "sh" ]; then
        printf "#!/bin/sh" > "$2"
    elif [ "$1" = "py" ]; then
        printf "#!/usr/bin/env python3" > "$2"
    fi
else
    echo "ERROR: not enough arguments"
    exit 1
fi
